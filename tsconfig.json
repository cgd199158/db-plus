{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "esnext",
    "checkJs": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true, // 支持es6的import,commonjs的require
    "sourceMap": true,
    "noEmit": true,
    "noLib": false,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true, // 装饰器语法
    "forceConsistentCasingInFileNames": true, // 强制区分大小写
    "resolveJsonModule": true, // 解析json文件
    "skipDefaultLibCheck": true // 忽略默认库
  },
  "exclude": ["node_modules"]
}
