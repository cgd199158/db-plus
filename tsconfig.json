{
  "compilerOptions": {
    "allowJs": false,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true, // 支持es6的import,commonjs的require
    "sourceMap": true,
    // "noEmit": false, // 不生成文件
    // "noLib": false, //
    // "isolatedModules": true, // 单文件编译, true: 不生产文件, false: 生成文件
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "noUnusedLocals": true, // 禁止未使用的变量被声明
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true, // 装饰器语法
    "forceConsistentCasingInFileNames": true, // 强制区分大小写
    "resolveJsonModule": true, // 解析json文件
    "skipDefaultLibCheck": true // 忽略默认库
  },
  "exclude": ["node_modules"]
}
