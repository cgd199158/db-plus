{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "outDir": "dist",
    "declaration": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@db-plus/*": ["../common/*/src"]
    }
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules"]
}
